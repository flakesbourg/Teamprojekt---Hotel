{
  "name": "client",
  "version": "1.0.0",
  "description": "client of the grandline website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "js": "esbuild .\\src\\scripts\\Main.mjs --bundle --outfile=.\\dist\\bundle.js",
    "clear": "rmdir /s/q .\\dist\\ & mkdir .\\dist\\",
    "lint": "semistandard .\\src\\scripts\\*.mjs",
    "format": "semistandard --fix .\\src\\scripts\\*mjs",
    "html": "mkdir .\\dist\\templates && xcopy .\\src\\templates .\\dist\\templates /E/H",
    "css": "lessc .\\src\\styles\\style.less .\\dist\\style.css",
    "assets": "mkdir .\\dist\\assets && xcopy .\\src\\assets .\\dist\\assets /E/H",
    "debug": "npm run clear && npm run lint && npm run js && npm run css && npm run html && npm run assets",
    "build": "npm run clear && npm run lint && npm run js && npm run html && npm run assets && lessc --clean-css .\\src\\styles\\style.less .\\dist\\style.css && terser .\\dist\\bundle.js --compress --mangle --comment=false -o .\\dist\\bundle.js",
    "start": "http-server .\\dist\\templates",
    "play": "npm install && npm run debug && npm start"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.15.14",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "semistandard": "^16.0.1",
    "terser": "^5.15.1"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "jquery": "^3.6.1"
  }
}
