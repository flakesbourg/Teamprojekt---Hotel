{
  "name": "client",
  "version": "1.0.0",
  "description": "client of the grandline website",
  "main": "",
  "scripts": {
    "js": "esbuild .\\client\\src\\scripts\\Main.mjs --bundle --outfile=.\\client\\dist\\bundle.js",
    "clear": "rmdir /s /q .\\client\\dist\\ && rmdir /s/q .\\node_modules",
    "rmDist": "rmdir /s /q .\\client\\dist\\ && mkdir .\\client\\dist",
    "lint": "semistandard server.mjs server\\src\\*.mjs .\\client\\src\\scripts\\*.mjs",
    "format": "semistandard --fix server.mjs server\\src\\*.mjs .\\client\\src\\scripts\\*.mjs",
    "html": "mkdir .\\client\\dist\\templates && xcopy .\\client\\src\\templates .\\client\\dist\\templates /E/H",
    "css": "lessc .\\client\\src\\styles\\style.less .\\client\\dist\\style.css",
    "assets": "mkdir .\\client\\dist\\assets && xcopy .\\client\\src\\assets .\\client\\dist\\assets /E/H",
    "minify:css": "lessc --clean-css .\\client\\src\\styles\\style.less .\\client\\dist\\style.css",
    "minify:js": "terser .\\client\\dist\\bundle.js --compress --mangle --comment=false -o .\\client\\dist\\bundle.js",
    "debug": "npm run rmDist && npm run lint && npm run js && npm run css && npm run html && npm run assets",
    "build": "npm run lint && npm run js && npm run html && npm run assets && npm run minify:css && npm run minify:js",
    "start": "node server.mjs 8080",
    "play": "npm install && npm run debug && npm start"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "esbuild": "^0.15.14",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "semistandard": "^16.0.1",
    "terser": "^5.15.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-server": "^14.1.1",
    "jquery": "^3.6.1",
    "mongodb": "^4.12.1"
  }
}
